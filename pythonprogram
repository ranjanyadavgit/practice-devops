calculation_to_units = 24
name_of_unit = "hours"


def days_to_unit(num_of_days):
    if num_of_days > 0:
        return f"{num_of_days} days are {num_of_days * calculation_to_units} {name_of_unit}"
    elif num_of_days == 0:
        return "You entered a zero number,please enter a valid no"
    else:
        return "you entered a neagative value so no conversion for you"


user_input = input("enter no of day and i will convert it into hours\n")
if user_input.isdigit():
 user_input_number = int(user_input)
 calculated_values = days_to_unit(user_input_number)
 print(calculated_values)

else:
    print("your input is not a no, dont ruin my program")

